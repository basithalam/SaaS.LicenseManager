@model SaaS.LicenseManager.Models.AdminUser

@{ ViewData["Title"] = "Add New Admin"; }

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header text-white text-center py-4 bg-primary">
                    <h2 class="mb-1"><i class="bi bi-person-plus"></i> Add New Admin</h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="AddAdmin" method="post">
                        <div class="mb-3">
                            <label asp-for="Username" class="form-label">Username</label>
                            <input asp-for="Username" class="form-control" required>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" type="email" required>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" class="form-control" type="password" required>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary w-100"><i class="bi bi-person-plus"></i> Add Admin</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
