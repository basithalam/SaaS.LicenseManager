@model SaaS.LicenseManager.Models.Customer

<link rel="stylesheet" href="~/css/app-custom.css" asp-append-version="true" />
    

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow-lg">
                <div class="card-header text-white text-center py-4">
                    <h2 class="mb-1"><i class="bi bi-person-plus"></i> Register a New License</h2>
                    <p class="mb-0 small">Fill in the details below to create a new customer license.</p>
                </div>
                <div class="card-body p-4">
                    <form id="customerForm" asp-action="Create" method="post" autocomplete="off" novalidate>
                        <div class="form-floating mb-3">
                            <input asp-for="FullName" class="form-control" id="FullName" placeholder="Full Name" required />
                            <label asp-for="FullName"></label>
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <select asp-for="Country" class="form-select" id="Country" required>
                                <option value="">Select Country</option>
                            </select>
                            <label asp-for="Country"></label>
                            <span asp-validation-for="Country" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Phone Number</label>
                            <div class="input-group">
                                <select id="CountryCode" class="form-select" style="max-width: 150px;">
                                    <option value="" disabled selected>Country Code</option>
                                </select>
                                <input id="PhoneNumberInput" type="tel" class="form-control" placeholder="Enter phone number" required />
                            </div>
                            <input asp-for="PhoneNumber" type="hidden" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="EmailAddress" type="email" class="form-control" id="EmailAddress" placeholder="Email" required />
                            <label asp-for="EmailAddress"></label>
                            <span asp-validation-for="EmailAddress" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-4">
                            <select asp-for="LicenseType" class="form-select" id="LicenseType" required>
                                <option value="">Select License Type</option>
                                <option value="Trial7Days">Trial 7 Days</option>
                                <option value="Monthly">Monthly</option>
                                <option value="Yearly">Yearly</option>
                            </select>
                            <label asp-for="LicenseType"></label>
                            <span asp-validation-for="LicenseType" class="text-danger"></span>
                        </div>
                        <div id="payment-section" style="display:none;">
                            <hr />
                            <h5 class="mb-3">Select Your Plan:</h5>
                            <div class="d-flex justify-content-around mb-4">
                                <div class="text-center">
                                    <h4 class="text-primary">Monthly</h4>
                                    <p class="lead" id="monthly-price">Loading...</p>
                                </div>
                                <div class="text-center">
                                    <h4 class="text-primary">Yearly</h4>
                                    <p class="lead" id="yearly-price">Loading...</p>
                                </div>
                            </div>
                            <button id="stripe-checkout-btn" type="button" class="btn btn-primary w-100 py-2 mb-2">
                                <i class="bi bi-credit-card"></i> Proceed to Payment
                            </button>
                            <div id="payment-message" class="text-danger text-center mt-2"></div>
                        </div>
                        <button id="register-btn" type="submit" class="btn btn-success w-100 py-2 mb-2">
                            <i class="bi bi-check-circle"></i> Register
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/app-custom.js" asp-append-version="true"></script>
    <script src="~/js/country-codes.js" asp-append-version="true"></script>
    <script src="~/js/create-customer.js" asp-append-version="true"></script>
    <script src="~/js/StipePaymentGateway.js" asp-append-version="true"></script>
}